<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.jitendra.tourism.Activities.Activity4CityDiscription">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">


    <ImageView
        android:id="@+id/iv_CityPic"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_CityDiscription"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kolkata"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/b_gallery"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:text="Gallery"
        android:textAlignment="center"
        android:visibility="visible"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/b_FamousPlaces"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:text="Famous Places"
        android:visibility="visible"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content" />
</LinearLayout>

</ScrollView>
