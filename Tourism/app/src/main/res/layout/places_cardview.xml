<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/card1"
    android:layout_height="wrap_content">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_places1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/tv_Places1Text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akshardham Temple"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:visibility="visible"
        android:padding="5dp"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Name of Place You Want To Add in The List"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        android:padding="5dp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/tv_Places1Text2"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Swaminarayan Akshardham in New Delhi epitomizes 10,000 years of Indian culture in all its breathtaking grandeur, beauty, wisdom an d bliss."
        android:visibility="visible"
        android:textSize="25dp"
        />
    <EditText
        android:id="@+id/et_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Details and Discription of the Place"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        android:padding="5dp"
        android:textAlignment="center"
        />

</LinearLayout>
</ScrollView>
</android.support.v7.widget.CardView>





</LinearLayout>