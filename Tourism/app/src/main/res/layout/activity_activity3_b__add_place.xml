<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jitendra.tourism.Activities.Activity3_b_AddPlace"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/iv_AddCityImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:id="@+id/tv_AddCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_AddCityImage"
        android:layout_below="@+id/iv_AddCityImage"
        android:layout_centerHorizontal="true"
        android:hint="Enter City Name"
        android:paddingTop="100dp"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/b_Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textAlignment="center"/>

</LinearLayout>
